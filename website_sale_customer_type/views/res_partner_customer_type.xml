<odoo>

    <record id="view_partner_customer_type_form" model="ir.ui.view">
        <field name="name">res.partner.customer.type.form</field>
        <field name="model">res.partner.customer.type</field>
        <field name="arch" type="xml">
            <form string="Customer Type">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="show_on_website_button" type="object"
                                class="oe_stat_button" icon="fa-globe">
                            <field name="show_on_website" widget="website_button"/>
                        </button>
                        <button name="toggle_active" type="object"
                                class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"
                                options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <h1>
                        <field name="name" default_focus="1" placeholder="Name"/>
                    </h1>
                    <h2>Signup Configuration</h2>
                        <div class="row mt16 o_settings_container" id="website_signup">
                            <div class="col-xs-12 col-md-12 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="website_restrict_signup"/>
                                </div>
                                <div class="o_setting_right_pane" id="website_restrict_signup">
                                    <label for="website_restrict_signup"/>
                                    <div class="text-muted">
                                        Add a custom message explaining why signup is restricted
                                    </div>
                                    <div class="content-group mt16" attrs="{'invisible' : [('website_restrict_signup', '=', False)]}">
                                        <div>
                                            <label string="Signup message" for="website_restrict_signup_text" class="col-md-2 o_light_label"/>
                                            <field name="website_restrict_signup_text"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-md-12 o_setting_box" id="website_signup_vat_required">
                                <div class="o_setting_left_pane">
                                    <field name="website_signup_vat_required"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="website_signup_vat_required"/>
                                    <div class="text-muted">
                                        Add a custom message accompanying the TIN/VAT number requirement
                                    </div>
                                    <div class="content-group mt16" attrs="{'invisible' : [('website_signup_vat_required', '=', False)]}">
                                        <div>
                                            <label string="VAT message" for="website_signup_vat_required_text" class="col-md-2 o_light_label"/>
                                            <field name="website_signup_vat_required_text"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <h2>Website Configuration</h2>
                    <group name="website_config">
                        <field name="website_require_early_login"/>
                        <field name="next_url"/>
                    </group>
                    <h2>Product Configuration</h2>
                    <group name="website_product">
                        <field name="website_restrict_product"/>
                        <field name="website_product_ids"
                            attrs="{'invisible': [('website_restrict_product', '=', False)]}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_partner_customer_type_list" model="ir.ui.view">
        <field name="name">res.partner.customer.type.list</field>
        <field name="model">res.partner.customer.type</field>
        <field name="arch" type="xml">
            <tree string="Customer Type">
                <field name="display_name"/>
            </tree>
        </field>
    </record>

    <record id="view_partner_customer_type_filter" model="ir.ui.view">
        <field name="name">res.partner.customer.type.filter</field>
        <field name="model">res.partner.customer.type</field>
        <field name="arch" type="xml">
            <search string="Search Customer Type">
                <field name="name"/>
                <separator/>
                <filter string="Website Restrict Products" name="website_restrict_product" domain="[('website_restrict_product','=', True)]"/>
            </search>
        </field>
    </record>

    <record id="action_partner_customer_type" model="ir.actions.act_window">
        <field name="name">Customer Type Action</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner.customer.type</field>
        <field name="view_type">form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new customer type.
            </p>
            <p>
                Manage customer types to distinguish customer in the e-commerce.
            </p>
        </field>
    </record>

    <menuitem id="menu_partner_customer_type"
        action="website_sale_customer_type.action_partner_customer_type"
        name="Customer Type"
        parent="contacts.res_partner_menu_config"/>

</odoo>
